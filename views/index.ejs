<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Cocktail & Snack</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
  <div class="background-overlay d-flex justify-content-center align-items-center">
    <div class="text-center">
      <h1 class="mb-4 text-white">Welcome to Cocktail & Snack</h1>
      <a href="/result" class="btn btn-primary me-3">Get Random Pairing</a>
      <a href="/category" class="btn btn-secondary">Choose by Category</a>
      
<!-- Toggle Switch -->
<div class="toggle-card-container animate__animated animate__fadeInDown">
  <div class="card bg-dark bg-opacity-50 shadow-sm">
    <div class="card-body text-center">
      <label class="switch me-2">
        <input type="checkbox" id="toggleView" />
        <span class="slider"></span>
      </label>
      <span id="toggleLabel" class="text-white">Show: Football Schedule</span>
    </div>
  </div>
</div>


  <!-- Football Section -->
<div id="footballSection" class="mt-4 text-white animate__animated animate__fadeIn">
  <div class="card info-card shadow-sm mx-auto" style="max-width: 600px; max-height: 300px; overflow-y: auto;">
    <div class="card-body">
      <h2 class="card-title">NAU Football — 2025 Schedule & Scores</h2>
      <% if (schedule.length === 0) { %>
        <p>No schedule data available.</p>
      <% } else { %>
        <ul class="list-unstyled">
          <% schedule.forEach(game => { %>
            <li><%= game.date %> — <%= game.opponent %> — <%= game.result %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
</div>

<!-- Weather Section -->
<div id="weatherSection" class="mt-4 text-white" style="display: none;">
  <div class="card info-card shadow-sm mx-auto" style="max-width: 600px; max-height: 250px; overflow-y: auto;">
    <div class="card-body">
      <% if (!weather) { %>
        <p>No weather data available.</p>
      <% } else { %>
        <h2 class="card-title">Weather in <%= weather.name %></h2>
        <p><%= weather.weather[0].description %></p>
        <p>Temperature: <%= weather.main.temp %> °F</p>
        <p>Humidity: <%= weather.main.humidity %>%</p>
      <% } %>
    </div>
  </div>
</div>


  <script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('toggleView');
    const label = document.getElementById('toggleLabel');
    const football = document.getElementById('footballSection');
    const weather = document.getElementById('weatherSection');

    toggle.addEventListener('change', () => {
      if (toggle.checked) {
        // Fade out Football, then show Weather
        football.classList.remove('animate__fadeIn');
        football.classList.add('animate__fadeOut');
        football.addEventListener('animationend', () => {
          football.style.display = 'none';
          weather.style.display = 'block';
          weather.classList.remove('animate__fadeOut');
          weather.classList.add('animate__fadeIn');
        }, { once: true });
        label.textContent = 'Show: Weather';
      } else {
        // Fade out Weather, then show Football
        weather.classList.remove('animate__fadeIn');
        weather.classList.add('animate__fadeOut');
        weather.addEventListener('animationend', () => {
          weather.style.display = 'none';
          football.style.display = 'block';
          football.classList.remove('animate__fadeOut');
          football.classList.add('animate__fadeIn');
        }, { once: true });
        label.textContent = 'Show: Football Schedule';
      }
    });
  });
  </script>

  <footer class="bg-dark text-white text-center py-4 mt-5">
    <p>&copy; <%= new Date().getFullYear() %> Cocktail & Snack Pairing. All rights reserved.</p>
    <div>
      <a href="https://facebook.com" class="text-white me-3"><i class="bi bi-facebook"></i></a>
      <a href="https://twitter.com" class="text-white me-3"><i class="bi bi-twitter"></i></a>
      <a href="https://instagram.com" class="text-white"><i class="bi bi-instagram"></i></a>
    </div>
  </footer>
</body>
</html>
