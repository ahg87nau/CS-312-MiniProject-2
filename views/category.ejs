<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Choose by Category</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="background-overlay d-flex justify-content-center align-items-center">
    <div class="container text-center">
      <h1 class="mb-4 text-white">Choose Cocktail by Category</h1>
      <form action="/category-result" method="POST" class="bg-light p-4 rounded">
        <div class="mb-3">
          <label for="category" class="form-label">Select a category:</label>
          <select id="category" name="category" class="form-select">
            <% categories.forEach(c => { %>
              <option value="<%= c %>"><%= c %></option>
            <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Get Pairing</button>
      </form>
      <div class="mt-3">
        <a href="/" class="btn btn-secondary">Back to Home</a>
      </div>
    </div>
  </div>
</body>
</html>
